<div class="coulumn is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png" alt="Placeholder image">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'tweets/form'%>
    </div>
  </article>


  <% @tweets.each do |tweetz| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="media-left">
            <p class="image is-64x64">
              <img src="https://bulma.io/images/placeholders/64x64.png" alt="Placeholder image">
            </p>
          </figure>
        </div>
        <div class="media-content">
            <strong>Mike Ross</strong><br>
            <small>@oa7</small><br>
            <p><%= tweetz.tweet %></p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to tweetz, class: "level-item" do %>
              <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_tweet_path(tweetz), class: "level-item" do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to tweetz, method: :delete, data: {confirm: "Are you sure you want to delete this tweet?"} do %>
              <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %>
          </div>
        </nav>
      </article>
    </div>
  <% end %>
</div>